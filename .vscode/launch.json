    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Agent: Web Search",
            "type": "debugpy",
            "request": "launch",
            "module": "a2a_servers.agent",
            "cwd": "${workspaceFolder}/src",
            "args": [
                "--agent-name",
                "web_search_agent"
            ]
        },
        {
            "name": "Execute Supervisor",
            "type": "debugpy",
            "request": "launch",
            "module": "a2a_servers.supervisor",
            "cwd": "${workspaceFolder}/src",
            "args": [
                "--agent-name",
                "supervisor_agent"
            ]
        },
        {
            "name": "Execute MCP Server",
            "type": "debugpy",
            "request": "launch",
            "module": "mcp_servers.${fileBasenameNoExtension}",
            "cwd": "${workspaceFolder}/src",
            "env": {
                "MCP_HOST": "0.0.0.0",
                "MCP_PORT": "9999"
            },
            "args": [
                "--host",
                "${env:MCP_HOST}",
                "--port",
                "${env:MCP_PORT}"
            ]
        },
        {
            "name": "Docker: Attach to Supervisor",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": "${input:debugpyPort}"
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/src",
                    "remoteRoot": "/app"
                }
            ],
            "justMyCode": false,
        }
    ],
    "inputs": [
        {
            "type": "prompt",
            "id": "debugpyPort",
            "description": "Debugpy Port",
            "default": "5678"
        }
    ]
}