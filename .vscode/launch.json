    "version": "0.2.0",
    "configurations": [
        {
            "name": "Agent: Web Search",
            "type": "debugpy",
            "request": "launch",
            "module": "a2a_servers.agent",
            "cwd": "${workspaceFolder}/src",
            "args": [
                "--agent-name",
                "web_search_agent"
            ]
        }, 
        {"name":"Execute Supervisor",
            "type": "debugpy",
            "request": "launch",
            "module": "a2a_servers.supervisor",
            "cwd": "${workspaceFolder}/src",
            "args": [
                "--agent-name",
                "supervisor"
            ]
        },

        {
            "name": "Execute MCP Server",
            "type": "debugpy",
            "request": "launch",
            "module": "mcp_servers.${fileBasenameNoExtension}",
            "cwd": "${workspaceFolder}/src",
            "env": {
                "MCP_HOST": "0.0.0.0",
                "MCP_PORT": "9999"
            },
            "args": [
                "--host",
                "${env:MCP_HOST}",
                "--port",
                "${env:MCP_PORT}"
            ]
        }
    ]
}