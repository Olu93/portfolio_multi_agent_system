{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/frontend"
        },
        {
            "name": "FastAPI: A2A Chat Service",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}/backend/src",
            "args": [
                "serve.run:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "9002",
                "--reload-dir",
                "${workspaceFolder}/backend/src/serve"
            ],
            "justMyCode": false,
        },
        {
            "name": "Agent: Web Search",
            "type": "debugpy",
            "request": "launch",
            "module": "a2a_servers.agent",
            "cwd": "${workspaceFolder}/backend/src",
            "args": [
                "--agent-name",
                "web_search_agent"
            ]
        },
        {
            "name": "Execute Supervisor",
            "type": "debugpy",
            "request": "launch",
            "module": "a2a_servers.supervisor",
            "cwd": "${workspaceFolder}/backend/src",
            "args": [
                "--agent-name",
                "supervisor_agent"
            ]
        },
        {
            "name": "Execute MCP Server",
            "type": "debugpy",
            "request": "launch",
            "module": "mcp_servers.${fileBasenameNoExtension}",
            "cwd": "${workspaceFolder}/backend/src",
            "env": {
                "MCP_HOST": "0.0.0.0",
                "MCP_PORT": "9999"
            },
            "args": [
                "--host",
                "${env:MCP_HOST}",
                "--port",
                "${env:MCP_PORT}"
            ]
        },
        {
            "name": "Docker: Attach to agent",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": "${input:debugpyPort}"
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/backend/src",
                    "remoteRoot": "/app"
                }
            ],
            "justMyCode": false,
        },
        {
            "name": "Docker: Attach to specific agent",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": "20002"
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/backend/src",
                    "remoteRoot": "/app"
                }
            ],
            "justMyCode": false,
        },

    ],
    "inputs": [
        {
            "type": "pickString",
            "id": "debugpyPort",
            "description": "Debugpy Port",
            "default": "20002",
            "options": [
                "22222",
                "20002",
                "20003",
                "20004",
                "20005",
                "20006",
                "20007",
                "20008",
                "20009",
                "20010",
                "20011",
                "20012"
            ]
        }
    ]
}